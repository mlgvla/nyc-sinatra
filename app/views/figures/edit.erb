<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH" />
  <label for="figure_name">Name: </label>
  <input
    type="text"
    name="figure[name]"
    id="figure_name"
    value="<%= @figure.name %>"
  />

  <h4>Edit Titles</h4>
  <% Title.all.each do |title| %>
  <input
    type="checkbox"
    name="figure[title_ids][]"
    id="title_<%= title.id %>"
    value="<%= title.id %>"
    <% 'checked' if @figure.titles.include?(title) %>
  /><label for="<%= title.id %>"><%= title.name %></label><br />
  <% end %>

  <h4>Create New Title</h4>
  <input type="text" name="title[name]" id="new_title" /><br />

  <h4>Landmarks</h4>
  <% Landmark.all.each do |landmark| %>
  <input
    type="checkbox"
    name="figure[landmark_ids][]"
    id="landmark_<%= landmark.id %>"
    value="<%= landmark.id %>"
    <% 'checked' if @figure.landmarks.include?(landmark) %>
  /><label for="<%= landmark.id %>"><%= landmark.name %></label><br />
  <% end %>

  <h4>Create New Landmark</h4>

  <label for="landmark_name">Name: </label
  ><input type="text" name="landmark[name]" id="new_landmark" />
  <label for="">Year: </label
  ><input type="text" name="landmark[year_completed]" id="year_completed" />
  <input type="submit" value="Edit Figure />
</form>
